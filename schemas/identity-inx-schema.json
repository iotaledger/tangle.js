{
    "$id": "https://iotaledger.github.io/ebsi/identity-inx-schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "uri": {
            "type": "string",
            "format": "uri"
        },
        "nonEmptyString": {
            "type": "string",
            "minLength": 1
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "Doc": {
            "type": "object",
            "minProperties": 1
        },
        "Signature": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "number"
                },
                "publicKey": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "signature": {
                    "$ref": "#/definitions/nonEmptyString"
                }
            },
            "required": [
                "type",
                "publicKey",
                "signature"
            ]
        },
        "creationType": {
            "type": "string",
            "enum": [
                "DIDCreation"
            ]
        },
        "updateType": {
            "type": "string",
            "enum": [
                "DIDUpdate"
            ]
        },
        "issueAction": {
            "type": "string",
            "enum": [
                "Issue"
            ]
        },
        "transactionAction": {
            "type": "string",
            "enum": [
                "TransactionRequest"
            ]
        },
        "signatureAction": {
            "type": "string",
            "enum": [
                "TransactionSignature"
            ]
        },
        "Did-Creation-Request": {
            "type": "object",
            "properties": {
                "type": {
                    "$ref": "#/definitions/creationType"
                },
                "action": {
                    "$ref": "#/definitions/issueAction"
                },
                "doc": {
                    "$ref": "#/definitions/Doc"
                },
                "metadata": {
                    "type": "object",
                    "properties": {
                        "stateControllerAddress": {
                            "$ref": "#/definitions/nonEmptyString"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "required": [
                "type",
                "action",
                "doc"
            ],
            "additionalProperties": false
        },
        "Did-Update-Request": {
            "type": "object",
            "properties": {
                "type": {
                    "$ref": "#/definitions/updateType"
                },
                "action": {
                    "$ref": "#/definitions/issueAction"
                },
                "doc": {
                    "$ref": "#/definitions/Doc"
                }
            },
            "required": [
                "type",
                "action",
                "doc"
            ]
        },
        "Creation-TransactionRequest-Metadata": {
            "type": "object",
            "properties": {
                "fundingAddress": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "stateControllerAddress": {
                    "$ref": "#/definitions/nonEmptyString"
                }
            },
            "required": [
                "fundingAddress"
            ]
        },
        "Update-TransactionRequest-Metadata": {
            "type": "object",
            "properties": {
                "fundingAddress": {
                    "$ref": "#/definitions/nonEmptyString"
                }
            },
            "additionalProperties": false
        },
        "Did-Creation-Transaction-Request": {
            "type": "object",
            "properties": {
                "type": {
                    "$ref": "#/definitions/creationType"
                },
                "action": {
                    "$ref": "#/definitions/transactionAction"
                },
                "doc": {
                    "$ref": "#/definitions/Doc"
                },
                "metadata": {
                    "$ref": "#/definitions/Creation-TransactionRequest-Metadata"
                }
            },
            "required": [
                "type",
                "action",
                "doc",
                "metadata"
            ],
            "additionalProperties": false
        },
        "Did-Creation-Transaction-Signature": {
            "type": "object",
            "properties": {
                "type": {
                    "$ref": "#/definitions/creationType"
                },
                "action": {
                    "$ref": "#/definitions/signatureAction"
                },
                "doc": {
                    "$ref": "#/definitions/Doc"
                },
                "metadata": {
                    "allOf": [
                        {
                            "type": "object",
                            "properties": {
                                "created": {
                                    "$ref": "#/definitions/timestamp"
                                },
                                "updated": {
                                    "$ref": "#/definitions/timestamp"
                                }
                            },
                            "required": [
                                "created",
                                "updated"
                            ]
                        },
                        {
                            "$ref": "#/definitions/Creation-TransactionRequest-Metadata"
                        }
                    ]
                },
                "txEssenceHash": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "signature": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Signature"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "type",
                "action",
                "doc",
                "metadata",
                "txEssenceHash",
                "signature"
            ]
        },
        "Did-Update-Transaction-Request": {
            "type": "object",
            "properties": {
                "type": {
                    "$ref": "#/definitions/updateType"
                },
                "action": {
                    "$ref": "#/definitions/transactionAction"
                },
                "doc": {
                    "$ref": "#/definitions/Doc"
                },
                "metadata": {
                    "$ref": "#/definitions/Update-TransactionRequest-Metadata"
                }
            },
            "required": [
                "type",
                "action",
                "doc",
                "metadata"
            ],
            "additionalProperties": false
        },
        "Did-Update-Transaction-Signature": {
            "type": "object",
            "properties": {
                "type": {
                    "$ref": "#/definitions/updateType"
                },
                "action": {
                    "$ref": "#/definitions/signatureAction"
                },
                "doc": {
                    "$ref": "#/definitions/Doc"
                },
                "metadata": {
                    "allOf": [
                        {
                            "type": "object",
                            "properties": {
                                "updated": {
                                    "$ref": "#/definitions/timestamp"
                                }
                            },
                            "required": [
                                "updated"
                            ]
                        },
                        {
                            "$ref": "#/definitions/Update-TransactionRequest-Metadata"
                        }
                    ]
                },
                "txEssenceHash": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "signature": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Signature"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "type",
                "action",
                "doc",
                "metadata",
                "txEssenceHash",
                "signature"
            ]
        }
    },
    "oneOf": [
        {
            "$ref": "#/definitions/Did-Creation-Request"
        },
        {
            "$ref": "#/definitions/Did-Update-Request"
        },
        {
            "$ref": "#/definitions/Did-Creation-Transaction-Request"
        },
        {
            "$ref": "#/definitions/Did-Creation-Transaction-Signature"
        },
        {
            "$ref": "#/definitions/Did-Update-Transaction-Request"
        },
        {
            "$ref": "#/definitions/Did-Update-Transaction-Signature"
        }
    ]
}